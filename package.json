{
  "name": "miaoda",
  "version": "3.0.2",
  "description": "专业的 Claude Code 部署和管理工具 - 支持环境安装、代理配置、系统终端集成",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron . --dev",
    "build": "npm run prebuild && electron-builder --mac --publish=never",
    "prebuild": "node scripts/prebuild.js",
    "dist": "npm run prebuild && electron-builder --mac --publish=never",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "claude",
    "code",
    "manager",
    "electron",
    "terminal"
  ],
  "author": "Miaoda Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "electron": "^30.0.0",
    "electron-builder": "^25.0.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^8.2.0",
    "node-pty": "^1.0.0",
    "pngjs": "^7.0.0",
    "uuid": "^11.1.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.miaoda.app",
    "productName": "Miaoda",
    "afterPack": "./scripts/afterPack.js",
    "publish": [
      {
        "provider": "github",
        "owner": "miounet11",
        "repo": "claude-code-manager"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "identity": null,
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
